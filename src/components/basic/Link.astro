---
export interface Props {
    label: string;
    href: string;
}

const { label, href } = Astro.props;
---

<a href={href}>
    <svg xmlns="http://www.w3.org/2000/svg"
         xmlns:xlink="http://www.w3.org/1999/xlink"
         width={`0.9rem`}
         height={`0.9rem`}
         viewBox={`0 0 100 100`}
         aria-hidden="true"
    >
        <g>
            <path
                fill="currentColor"
                d="M83.3,79.7c0,2-1.6,3.6-3.6,3.6H20.3c-2,0-3.6-1.6-3.6-3.6V20.3c0-2,1.6-3.6,3.6-3.6h23.4V9.5H20.3   c-6,0-10.8,4.8-10.8,10.8v59.4c0,6,4.8,10.8,10.8,10.8h59.4c6,0,10.8-4.8,10.8-10.8V56.3h-7.2V79.7z" />
            <polygon
                fill="currentColor"
                points="56.3,9.5 56.3,16.7 78.2,16.7 49.9,45 55,50.1 83.3,21.8 83.3,43.7 90.5,43.7 90.5,9.5  " />
        </g>
    </svg>
    {label}
</a>

<style>
    a {
        display: inline-flex;
        flex-direction: row;
        align-items: baseline;
        gap: 0.2rem;
        color: var(--font-color);
        text-decoration: underline;
    }

    svg {
        place-self: flex-end;
        margin-bottom: 0.4rem;
    }

    a:hover {
        cursor: pointer;
        background: var(--font-color);
        color: var(--bg-color);
    }
</style>